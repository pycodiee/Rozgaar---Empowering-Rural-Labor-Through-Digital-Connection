<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ROZGAAR - Logged Out</title>
    
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://unpkg.com/lucide@latest"></script>

    <style>
        :root {
            --primary-black: #000000;
            --primary-white: #F4F3EE;
        }

        body {
            background-color: var(--primary-white);
            color: var(--primary-black);
            min-height: 100vh;
            padding-top: 76px;
        }

        .navbar {
            background-color: var(--primary-white);
            border-bottom: 1px solid rgba(0,0,0,0.1);
        }

        .logout-container {
            background-color: white;
            border-radius: 15px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            padding: 3rem;
            margin: 4rem auto;
            max-width: 500px;
            animation: slideUp 0.6s ease-out;
            text-align: center;
        }

        .icon-container {
            width: 80px;
            height: 80px;
            background-color: var(--primary-white);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 2rem;
            animation: fadeIn 0.6s ease-out;
        }

        @keyframes slideUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
            }
            to {
                opacity: 1;
            }
        }

        .btn-hover {
            transition: all 0.3s ease;
        }

        .btn-hover:hover {
            transform: translateY(-2px);
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar fixed-top">
        <div class="container">
            <a class="navbar-brand fw-bold" href="/">ROZGAAR</a>
        </div>
    </nav>

    <!-- Logout Content -->
    <div class="container">
        <div class="logout-container">
            <div class="icon-container">
                <i data-lucide="log-out" style="width: 40px; height: 40px;"></i>
            </div>
            
            <h2 class="display-6 fw-bold mb-3">You've Been Logged Out</h2>
            <p class="lead mb-4">Thank you for using ROZGAAR. We hope to see you again soon!</p>
            
            <div class="d-flex flex-column gap-3 mt-5">
                <button onclick="window.location.href='/login'" class="btn btn-dark btn-lg btn-hover">
                    <i data-lucide="log-in" class="me-2" style="width: 18px; height: 18px;"></i>
                    Sign In Again
                </button>
                <button onclick="window.location.href='/landing'" class="btn btn-outline-dark btn-hover">
                    <i data-lucide="landing" class="me-2" style="width: 18px; height: 18px;"></i>
                    Return to Landing Page
                </button>
            </div>
        </div>
    </div>

    <script>
        // Initialize Lucide Icons
        lucide.createIcons();

        // Add smooth hover animation for buttons
        document.querySelectorAll('.btn').forEach(button => {
            button.addEventListener('mouseover', function() {
                this.style.transform = 'translateY(-2px)';
            });

            button.addEventListener('mouseout', function() {
                this.style.transform = 'translateY(0)';
            });
        });
    </script>
</body>
</html>