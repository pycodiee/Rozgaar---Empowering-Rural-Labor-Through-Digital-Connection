    <script>
        // Initialize Lucide Icons
        lucide.createIcons();

        // GSAP Animations
        gsap.registerPlugin(ScrollTrigger);

        // Hero Images Animation - Slower and gentler
        gsap.set(".hero-image", { opacity: 0, scale: 0.95 }); // Reduced scale change
        
        const heroTl = gsap.timeline();
        
        heroTl.to(".hero-image", {
            opacity: 1,
            scale: 1,
            duration: 1.5, // Increased duration
            stagger: 0.3, // Increased stagger
            ease: "power2.out" // Gentler easing
        });

        // Floating animation - Reduced movement and slower
        gsap.to(".hero-image:nth-child(1)", {
            y: -15, // Reduced movement
            duration: 4, // Slower
            yoyo: true,
            repeat: -1,
            ease: "sine.inOut" // Smoother easing
        });

        gsap.to(".hero-image:nth-child(2)", {
            y: 15,
            x: -8, // Reduced movement
            duration: 4.5,
            yoyo: true,
            repeat: -1,
            ease: "sine.inOut"
        });

        gsap.to(".hero-image:nth-child(3)", {
            y: 15,
            x: 8, // Reduced movement
            duration: 4.5,
            yoyo: true,
            repeat: -1,
            ease: "sine.inOut"
        });

        gsap.to(".hero-image:nth-child(4)", {
            y: -10, // Reduced movement
            x: -5,
            duration: 5,
            yoyo: true,
            repeat: -1,
            ease: "sine.inOut"
        });

        gsap.to(".hero-image:nth-child(5)", {
            y: 10, // Reduced movement
            x: 5,
            duration: 5,
            yoyo: true,
            repeat: -1,
            ease: "sine.inOut"
        });

        // Scroll Reveal Animations - Gentler and slower
        const scrollRevealElements = document.querySelectorAll('.scroll-reveal');
        
        scrollRevealElements.forEach(element => {
            gsap.from(element, {
                scrollTrigger: {
                    trigger: element,
                    start: "top 85%", // Start animation sooner
                    toggleActions: "play none none reverse"
                },
                opacity: 0,
                y: 30, // Reduced movement
                duration: 1.2, // Slower animation
                ease: "power2.out" // Gentler easing
            });
        });

        // Content sections - Gentler animations
        gsap.utils.toArray('.content-section').forEach(section => {
            gsap.from(section, {
                scrollTrigger: {
                    trigger: section,
                    start: "top 85%",
                    toggleActions: "play none none reverse"
                },
                opacity: 0,
                y: 30, // Reduced movement
                duration: 1.2,
                ease: "power2.out"
            });
        });

        // Step cards - Gentler animations
        gsap.utils.toArray('.step-card').forEach((card, index) => {
            gsap.from(card, {
                scrollTrigger: {
                    trigger: card,
                    start: "top 85%",
                    toggleActions: "play none none reverse"
                },
                opacity: 0,
                x: index % 2 === 0 ? -30 : 30, // Reduced movement
                duration: 1.2,
                ease: "power2.out"
            });
        });

        // Mobile menu toggle
        const navbarToggler = document.querySelector('.navbar-toggler');
        const navLinks = document.querySelector('.nav-links');

        navbarToggler?.addEventListener('click', () => {
            navLinks.classList.toggle('d-none');
            navLinks.classList.toggle('d-flex');
        });

        // Scroll behavior for header
        let lastScroll = 0;
        const header = document.querySelector('.custom-nav');

        window.addEventListener('scroll', () => {
            const currentScroll = window.pageYOffset;

            if (currentScroll <= 0) {
                header.style.transform = 'translateY(0)';
                return;
            }

            if (currentScroll > lastScroll && !header.classList.contains('scroll-down')) {
                header.style.transform = 'translateY(-100%)';
            } else if (currentScroll < lastScroll && header.classList.contains('scroll-down')) {
                header.style.transform = 'translateY(0)';
            }

            lastScroll = currentScroll;
        });
    </script>

